<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        android:elevation="2dp"
        app:contentPadding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgNews"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_news"
                android:transitionName="@string/news_image"/>

            <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
                android:id="@+id/txtNewsTitle"
                style="@style/NewsTitleTextView"
                android:layout_below="@+id/imgNews"
                android:transitionName="@string/news_title"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>