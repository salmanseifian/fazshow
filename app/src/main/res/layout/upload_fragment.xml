<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="0.5"
        android:background="@drawable/bg_upload"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_chosen"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:contentDescription="" />

        <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
            android:id="@+id/btn_choose_image_file"
            style="@style/StartButton"
            android:layout_gravity="center_horizontal|bottom"
            android:text="@string/choose_image_file" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="0.5"
        android:background="@drawable/bg_upload"></LinearLayout>
</LinearLayout>