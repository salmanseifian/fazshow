<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blure_bg">

    <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
        style="@style/DescriptionTextView"
        android:text="@string/vote_hint" />


    <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
        android:id="@+id/txt_phase_title"
        style="@style/DescriptionTextView"
        android:layout_above="@+id/txt_phase_description"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
        android:id="@+id/txt_phase_description"
        style="@style/DescriptionTextView"
        android:layout_alignParentBottom="true"
        android:textSize="13sp" />


    <include layout="@layout/recycler_view" />


</RelativeLayout>