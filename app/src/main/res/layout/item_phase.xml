<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="12dp"
    android:layout_weight="5"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rl_phase"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        android:background="@drawable/bg_phase_enable"
        android:orientation="vertical"
        android:padding="8dp">


        <com.owjmedia.faaz.general.utils.CustomWidgets.TypefaceTextView
            android:id="@+id/txt_phase_subtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="32dp"
            android:ellipsize="end"
            android:gravity="right|center"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="@string/confirm" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_time"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_date"
        android:orientation="vertical">

        <com.owjmedia.faaz.general.utils.CustomWidgets.TypefaceTextView
            android:id="@+id/txt_phase_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="@string/confirm"/>
    </LinearLayout>

</LinearLayout>