<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/home_toolbar" />

    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/card_ar"
                        style="@style/ArCardView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp">

                        <ImageView
                            style="@style/HomeCardImageView"
                            android:src="@drawable/ic_augmented_reality" />

                        <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
                            style="@style/HomeCardTextView"
                            android:text="@string/augmented_reality" />
                    </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_news"
                    style="@style/HomeCardView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/card_ar">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            style="@style/HomeCardImageView"
                            android:src="@drawable/ic_newspaper" />

                        <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
                            style="@style/HomeCardTextView"
                            android:text="@string/news" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_movie"
                    style="@style/HomeCardView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/card_ar">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            style="@style/HomeCardImageView"
                            android:src="@drawable/ic_film" />

                        <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
                            style="@style/HomeCardTextView"
                            android:text="@string/movie_page" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_gallery_image"
                    style="@style/HomeCardView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/card_news">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            style="@style/HomeCardImageView"
                            android:src="@drawable/ic_picture" />

                        <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
                            style="@style/HomeCardTextView"
                            android:text="@string/image_gallery" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_gallery_videos"
                    style="@style/HomeCardView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/card_movie">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            style="@style/HomeCardImageView"
                            android:src="@drawable/ic_video_player" />

                        <com.owjmedia.faaz.general.utils.CustomWidgets.TypefacedTextView
                            style="@style/HomeCardTextView"
                            android:text="@string/movie_gallery" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>